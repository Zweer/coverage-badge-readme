{
  "name": "@zweer/coverage-badge-readme",
  "type": "module",
  "version": "1.0.2",
  "description": "A small utility to add your coverage badge to the README file",
  "author": "Zweer <n.olivieriachille@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/Zweer/coverage-badge-readme#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Zweer/coverage-badge-readme.git"
  },
  "bugs": {
    "url": "https://github.com/Zweer/coverage-badge-readme/issues"
  },
  "keywords": [
    "utility",
    "readme",
    "badge",
    "coverage"
  ],
  "exports": {
    "./cli": "./cli/program.js",
    "./badge": "./lib/badge.js",
    "./coverage": "./lib/coverage.js",
    "./readme": "./lib/readme.js"
  },
  "files": [
    "cli/**/*.{d.ts,js}",
    "lib/**/*.{d.ts,js}"
  ],
  "engines": {
    "node": ">= 20"
  },
  "scripts": {
    "lint:eslint": "eslint . --fix",
    "lint:lockfile": "lockfile-lint",
    "lint:engines": "ls-engines",
    "lint:publish": "publint --strict",
    "lint": "concurrently npm:lint:* --prefixColors auto",
    "test": "vitest run",
    "test:coverage": "npm test -- --coverage",
    "script:coverage": "npx tsx cli/index.ts",
    "prepare": "[ \"$CI\" = \"true\" ] || [ \"$GITHUB_ACTIONS\" = \"true\" ] && echo 'Skipping husky' && exit 0 || husky",
    "clean": "rimraf --glob ./{cli,lib,test}/**/*.{d.ts,js} ./vitest*.{d.ts,js}",
    "prebuild": "npm run clean",
    "build": "tsc",
    "release": "semantic-release"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "lockfile-lint": {
    "path": "package-lock.json",
    "type": "npm",
    "validate-https": true,
    "allowed-hosts": [
      "npm"
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ]
  },
  "dependencies": {
    "@commander-js/extra-typings": "^14.0.0",
    "commander": "^14.0.0",
    "dree": "^5.1.5",
    "ignore": "^7.0.5"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.14.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@tsconfig/node20": "^20.1.5",
    "@types/node": "^22.15.30",
    "@vitest/coverage-v8": "^3.2.2",
    "concurrently": "^9.1.2",
    "husky": "^9.1.7",
    "lockfile-lint": "^4.14.1",
    "ls-engines": "^0.9.3",
    "memfs": "^4.17.2",
    "publint": "^0.3.12",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.2.5",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vitest": "^3.2.2"
  }
}
